<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ayushyadav.ebuzz">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.MovieDetailActivity"
            android:label="@string/title_activity_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.MovieViewAllActivity" />
        <activity android:name=".Activities.TVShowsViewAllActivity" />
        <activity
            android:name=".Activities.TVDetailActivity"
            android:label="@string/title_activity_tvdetail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.CastDetailActivity"
            android:label="@string/title_activity_cast_detail"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>